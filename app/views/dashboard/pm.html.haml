#pm-dash
	.pm-dash-row
		.col-md-6
			.book-list
				%h3 Projects
				%table.table.table-striped.pm-book-table
					- @books.each do |book| 
						%tr 
						- if book.sku
							%td
								= link_to "#{book.sku}", book_path(book)
							%td
								= link_to "#{book.title}", book_path(book)
							%td
								= link_to "#{book.pub_year}", book_path(book)
							%td
								= book.authors.join(", ")
						- else
							%td
								= link_to "#{book.title}", book_path(book)
							%td
								= link_to "#{book.pub_year}", book_path(book)
							%td
								= book.authors.join(", ")
		.col-md-1
		.col-md-9
			.col-md-4
				.notifications
					%h3 Notifications
					%ul
						%li J.K. Rowling has uploaded a draft
						%li Kate completed the Interior Design task
						%li Ted McGillicutty's first draft is overdue
				.today
					%h3 Today
					%p 9:30 Phone call with Dave
					%p 1:00 Meeting with Stella
			.col-md-1
			.col-md-4
				#data-viz
					%h3 Season Progress
					%p You don't have any projects to track. Why don't you add one?
				.calendar
					%h3 
						= Time.now.strftime("%B")
					.calendar-frame
						.day-names
							%p  Sa
							%p  M
							%p  T
							%p  W
							%p  Th
							%p  F
							%p  Sa
						.month-days
							= calendar_alignment
							- (1..Time.days_in_month(Time.now.strftime("%-m").to_i)).each do |day|
								%div.date 
									= day
		%br
